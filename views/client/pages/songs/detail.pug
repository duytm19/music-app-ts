extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main 
    .singer-detail
        .container.my-3
            .row 
                .col-12 
                    +box-head(pageTitle)
                    .inner-title #{song.title}

                    .inner-actions 
                        div(class="inner-action inner-time")
                            <i class="fa-regular fa-clock"></i> Today
                        div(class="inner-action inner-singer")
                            <i class="fa-solid fa-microphone-lines"></i> #{singer.fullName}
                        div(class="inner-action inner-topic")
                            <i class="fa-solid fa-music"></i> #{topic.title}
                        div(class="inner-action inner-like")
                            <i class="fa-regular fa-thumbs-up"></i> #{song.like} Likes
                        div(class="inner-action inner-heart")
                            <i class="fa-regular fa-heart"></i> Favorite Song
                    
                    .inner-play 
                        .inner-avatar 
                            img(src=song.avatar)
                        .inner-audio 
                            div(
                                id="aplayer"
                                data-song=song 
                                data-singer=singer
                            )
                    
                    .inner-desc 
                        .inner-label Description 
                        .inner-text 
                            | !{song.description}
                    
                    .inner-desc 
                        .inner-label Lyrics 
                        .inner-text 
                            | !{song.lyrics}