extends ../../layouts/default.pug

block main  

    h1(class="mb-4") Add new product 

    
    form(
        action=`${prefixAdmin}/songs/create`
        id="form-create-product"
        enctype="multipart/form-data"
        method="POST"
    )
        div(class="form-group")
            label(for="title") Title 
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
            )
        div(class="form-group")
            label(for="topic") Topic
            select(
                name="topicId"
                id="topic"
                class="form-control"
                required
            )
                option(value="") -- Choose Topic --
                each item in topics 
                    option(value=item.id) #{item.title}
        div(class="form-group")
            label(for="singer") Singer
            select(
                name="singerId"
                id="singer"
                class="form-control"
                required
            )
                option(value="") -- Choose Singer --
                each item in singers
                    option(value=item.id) #{item.fullName}
        div(class="form-group")
            label(for="lyrics") Lyrics 
            textarea(
                class="form-control "
                id="lyrics"
                name="lyrics"
                rows="25"
            ) 
       
        div(class="form-group")
            label(for="desc") Description 
            textarea(
                class="form-control textarea-mce"
                id="desc"
                name="description"
                rows="5"
            ) 
       
        div(
            class="form-group"
            upload-image
        )
            label(for="avatar") Image 
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            button(
                type="button" 
                class="btn btn-secondary delete-hidden" 
                delete-image-preview 
            ) X
            img(
                src=""
                upload-image-preview
                class="image-preview"
            )
        div(
            class="form-group"
            upload-audio
        )
            label(for="audio") Audio 
            input(
                type="file"
                class="form-control-file"
                id="audio"
                name="audio"
                accept="audio/*"
                upload-audio-input
            )
            audio(
                controls 
                upload-audio-play
            )
                source(src="")
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked
            )
            label(for="statusActive" class="form-check-label") Active 
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
            )
            label(for="statusInActive" class="form-check-label") Inactive 
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Create new song

